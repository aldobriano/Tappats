<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bg"
  >
  
<Button 
 	android:id="@+id/back_btn" 
 	android:text="Back" 
 	android:layout_width="350px" 
 	android:layout_height="wrap_content" 
 	android:layout_marginTop="65px" 
 	android:layout_marginLeft="65px"
 	android:textSize="18px"
 	android:padding="0px"
 	android:background="@drawable/menutop_btn"
 	>
</Button>

<TextView
    android:id="@+id/messageText"
    android:text="Lots of text can go here to tell you all about the app."    
	android:layout_width="350px"
	android:layout_height="wrap_content"
	android:minHeight="35px"
	android:layout_centerHorizontal="true"
	android:layout_below="@+id/back_btn"
	android:layout_marginTop="2px"
    android:typeface="sans"
	android:textSize="15px"
	android:textColor="#000000"
	android:background="#FFFFFF"
    android:paddingTop="15px"
    android:paddingRight="15px"
    android:paddingBottom="10px"
    android:paddingLeft="15px"
/>
<ImageView 
	android:layout_height="wrap_content" 
	android:id="@+id/menubottomborder" 
	android:layout_width="wrap_content" 
	android:background="@drawable/menubottomborder" 
	android:layout_below="@+id/messageText" 
	android:layout_alignLeft="@+id/messageText"
	>
</ImageView>
  
</RelativeLayout>

